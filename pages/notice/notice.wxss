/* pages/notice.wxss */
page{
  background: #f5f5f5;
}
.topTab{
  background: #fff;
  display: flex;
  align-items: center;
  position: fixed;
  top: 0;
  width: 100%;
}
.topTab view{
  color: #9c9c9c;
  flex: 1;
  text-align: center;
}
.topTab .active{
  color: #1890ff;
  position: relative;
}
.topTab text{
  padding: 40rpx 0;
  display: inline-block;
}
.topTab .active text{
  border-bottom: 1px solid #1890ff;
}
.listBox{
  padding: 20rpx;
  margin-top: 130rpx;
}
.listBox .listItem{
  margin-top: 50rpx;
}
.listBox .listItem .time{
  text-align: center;
  font-size: 28rpx;
}
.listBox .listItem .time text{
   display: inline-block;
   background: #bbb;
   color: #fff;
   border-radius: 10rpx;
   margin: 0 auto;
   padding: 10rpx 20rpx;
}
.listBox .listItem .box{
  background: #fff;
  padding: 20rpx;
  margin-top: 40rpx;
  border-radius: 10rpx;
}
.listBox .listItem .box .top{
  color: #454545;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}
.listBox .listItem .box .bottom{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
}
.listBox .listItem .box .bottom text{
  color: #1890ff;
  font-size: 28rpx;
}
.listBox .listItem .box .bottom image{
  max-width: 15rpx;
}