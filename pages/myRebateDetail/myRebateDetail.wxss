/* pages/myRebateDetail/myRebateDetail.wxss */
page{
  background: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}
.myRebateDetail .top{
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}
.myRebateDetail .top .topInfo{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.myRebateDetail .top .topInfo .lb{
  display: flex;
  align-items: center;
  color: #222;
  font-size: 28rpx;
}
.myRebateDetail .top .topInfo .lb image{
  max-width: 35rpx;
  margin-right: 10rpx;
}
.priceInfo{
  color: #ffba33;
  font-size: 60rpx;
  font-weight: bold;
  margin-top: 20rpx;
}
.priceInfo text{
  font-size: 28rpx;
}
.listBox{
  margin-top: 20rpx;
  background: #fff;
  padding: 20rpx;

}
.listBox .t_op{
  padding: 30rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.listBox .t_op .title{
  color: #222;
  font-size: 34rpx;
}
.listBox .t_op .j_d{
  color: #aaa;
  font-size: 30rpx;
}
.listBox .t_op .j_d text:nth-child(2){
  color: #ffba33;
}
.listBox .listItem{
  border-top: 1px solid #ddd;
  padding: 30rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.listBox .listItem .info text{
  display: block;
}
.listBox .listItem .info text:nth-child(1){
  color: #222;
  font-size: 32rpx;
}
.listBox .listItem .info text:nth-child(2){
  color: #999;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.sp{
  color: #ffba33;
  font-size: 28rpx;
}
.jian{
  color: #3eb544;
  font-size: 28rpx;
}