/* pages/addAddress/addAddress.wxss */
page{
  background: #f5f5f5;
}
.input-group{
  padding: 20rpx;
  background: #fff;
}
.input-group .item{
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #ebebeb;
}
.input-group .item:last-child{
  border: none;
}
.input-group .item text{
  width: 200rpx;
}
.input-group .item input,
.input-group .item textarea{
  width: 100%;
}
.input-group .item image{
  max-width: 20rpx;
}
.default{
  justify-content: space-between;
}
.save{
   width: 100%;
   padding: 20rpx 0;
   text-align: center;
   background: #1890ff;
   color: #fff;
   margin-top: 30rpx;
   border-radius: 10rpx;
}
.del{
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  background: #fff;
  color: #999;
  border: 1px solid #bbb;
  margin-top: 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}