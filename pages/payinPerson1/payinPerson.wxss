/* pages/payinPerson/payinPerson.wxss */
page{
  background: #f5f5f5;
}
.payinPerson{
  padding: 0 20rpx;
}
.topBox{
  margin:20rpx;
}
.topBox .logImg{
   display:block;
   max-width: 160rpx;
   border-radius: 10rpx;
   margin: 0 auto;
}
.shopName{
  color: #222;
  font-size: 34rpx;
  margin: 20rpx 0;
  text-align: center;
}
.checkShop{
  width: 200rpx;
  margin: 0 auto;
  border: 1px solid #dadada;
  color: #cbcbcb;
  display: flex;
  align-items: center;
  border-radius: 30rpx;
  text-align: center;
  justify-content: center;
  font-size: 30rpx;
  padding: 10rpx 0;
}
.checkShop image{
  max-width: 15rpx;
  margin-left: 10rpx;
}
.payBox{
  background: #fff;
  padding: 30rpx 20rpx;
}
.payBox .text{
  font-size: 28rpx;
  color: #222;
}
.payBox .priceBox{
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  margin-top: 30rpx;
}
.payBox .priceBox text{
  width: 50rpx;
}
.payBox .priceBox input{
  width: 100%;
}
.pay{
   margin-top: 40rpx;
   background: linear-gradient(to right, #0c95ff , #026cff);
   width: 100%;
   border-radius: 50rpx;
   padding: 30rpx 0;
   color: #fff;
   text-align: center;
}